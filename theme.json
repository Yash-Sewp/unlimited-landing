{
  "name": "mechanical-warranty-theme",
  "version": 1,
  "colors": {
    "brand": {
      "primary": "#17B26A",
      "primary-600": "#16A462",
      "primary-700": "#148A54"
    },
    "navy": {
      "900": "#0E2A47",
      "800": "#163651",
      "700": "#1F4666"
    },
    "text": {
      "on-dark": "#FFFFFF",
      "on-light": "#0B1F35",
      "muted": "#5A7184"
    },
    "surface": {
      "base": "#FFFFFF",
      "muted": "#F5F7FA",
      "border": "#E2E8F0"
    },
    "utility": {
      "success": "#17B26A",
      "warning": "#F59E0B",
      "danger": "#EF4444",
      "info": "#2563EB"
    }
  },
  "typography": {
    "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, \"Apple Color Emoji\", \"Segoe UI Emoji\"",
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "hero": "2.5rem"
    },
    "lineHeights": {
      "tight": 1.15,
      "normal": 1.5,
      "relaxed": 1.65
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "spacing": {
    "0": "0px",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "16": "64px",
    "20": "80px",
    "24": "96px"
  },
  "radii": {
    "sm": "6px",
    "md": "10px",
    "lg": "14px",
    "xl": "20px",
    "pill": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(16, 24, 40, 0.06)",
    "md": "0 2px 8px rgba(16, 24, 40, 0.08)",
    "lg": "0 8px 24px rgba(16, 24, 40, 0.12)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },
  "layout": {
    "containerMaxWidth": "1200px",
    "sectionVerticalPadding": {
      "light": "64px",
      "dark": "80px"
    },
    "heroOverlayOpacity": 0.55,
    "heroBackgroundImage": ""
  },
  "components": {
    "buttonPrimary": {
      "bg": "{colors.brand.primary}",
      "color": "{colors.text.on-dark}",
      "hoverBg": "{colors.brand.primary-600}",
      "activeBg": "{colors.brand.primary-700}",
      "radius": "{radii.pill}",
      "fontWeight": "{typography.fontWeights.bold}"
    },
    "card": {
      "background": "{colors.surface.base}",
      "borderColor": "{colors.surface.border}",
      "radius": "{radii.lg}",
      "shadow": "{shadows.md}"
    },
    "sectionDark": {
      "background": "{colors.navy.900}",
      "textColor": "{colors.text.on-dark}"
    },
    "sectionLight": {
      "background": "{colors.surface.base}",
      "textColor": "{colors.text.on-light}"
    },
    "formField": {
      "background": "{colors.surface.base}",
      "borderColor": "{colors.surface.border}",
      "radius": "{radii.md}"
    }
  }
}


